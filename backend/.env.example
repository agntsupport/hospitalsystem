# Base de datos
DATABASE_URL="postgresql://hospital_user:hospital_password@localhost:5432/hospital_db"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_db
DB_USER=hospital_user
DB_PASSWORD=hospital_password

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=8h

# Servidor
PORT=3001
NODE_ENV=development

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/hospital.log

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# SEGURIDAD (Producción)
# Cambiar NODE_ENV=production para habilitar:
# - HTTPS enforcement (redirección automática HTTP → HTTPS)
# - HSTS (HTTP Strict Transport Security) headers
# - Content Security Policy (CSP)
# TRUST_PROXY=true  # Si está detrás de proxy/load balancer (nginx, AWS ALB, Cloudflare)